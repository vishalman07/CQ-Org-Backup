<apex:page controller="portalForgotPasswordController" standardStylesheets="false" showHeader="false" applyHtmlTag="false">
    
    <apex:composition template="portalNoAuthComposition">
        
        <apex:define name="vars">
            <apex:variable var="pageTitle" value="Portal" />
            <apex:variable var="paHeaderTitle" value="Portal" />
        </apex:define>

        <apex:define name="main">
            <apex:form styleClass="form-horizontal customForm">
                <div class="form-group">
                    <div class="col-xs-12 col-sm-7 col-md-6">
                        <apex:outputText styleClass="title" value="Please check your email for instructions to reset your password." />
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-xs-12 col-sm-7 col-md-6">
                        <div class="btn-row">
                            <apex:commandButton styleClass="btn btn-primary btn-block" value="Login Page" action="{!loginPage}" />
                        </div>
                    </div>
                </div>
           </apex:form>
        </apex:define>
        
    </apex:composition>
    
</apex:page>