<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>VA_Cancellation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(  TEXT(Attendance__c) = &apos;Cancelled&apos;,  isblank(Cancellation_Reason__c))</errorConditionFormula>
    <errorMessage>Cancellation reason must be given when cancelling.</errorMessage>
</ValidationRule>
